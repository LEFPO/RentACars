<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RentACars.View.MainPage">
    <VerticalStackLayout Padding="20" Spacing="20">
        <Label
                    x:Name="lblDebug"
                    Text="debug Text"
                />
        <!-- Identifiant -->
        <Label Text="Identifiant:" VerticalOptions="Center" />
        <Entry x:Name="UsernameEntry" Placeholder="Entrez votre identifiant" />

        <!-- Mot de Passe -->
        <Label Text="Mot de passe:" VerticalOptions="Center" />
        <Entry x:Name="PasswordEntry" Placeholder="Entrez votre mot de passe" IsPassword="True" />

        <!-- Se souvenir de moi -->
        <HorizontalStackLayout>
            <CheckBox x:Name="RememberMeCheckBox" />
            <Label Text="Se souvenir de moi" VerticalOptions="Center" />
        </HorizontalStackLayout>

        <!-- Boutons -->
        <HorizontalStackLayout HorizontalOptions="Center">
            <Button Text="Se connecter" />
            <Button Text="Créer un compte"  />
        </HorizontalStackLayout>

    </VerticalStackLayout>

</ContentPage>
